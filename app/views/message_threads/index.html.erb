<div class="flex items-center mb-8">
  <%= tag.h1 t(".new_heading"), class: "uppercase tracking-wider font-semibold text-gray-500 flex-auto" %>

  <%= link_to t(".add_new"), "#", class: "mr-3 flex-shrink-0 button -rounded" %>

  <%= form_with(url: "/", class: "styled-form") do |f| %>
    <%= f.search_field :query, placeholder: t(".search"), class: "rounded" %>
  <% end %>
</div>

<% @message_threads.each do |message_thread| %>
  <%= link_to message_thread_path(message_thread), class: "mb-4 flex items-center" do %>
    <%= avatar_tag message_thread.customer, size: 50, extra_class: "mr-4 flex-shrink-0" %>
    <div class=" flex-grow">
      <h3 class="text-gray-800 text-xl font-semibold">
        <%= message_thread.customer.name.full %>
        <small class="ml-2 text-lg text-gray-600 font-normal">
          <%= message_thread.customer.email %>
        </small>
      </h3>
      <div class="flex items-center">
        <span class="mr-3"><%= message_thread.subject %></span>
        <%= render(BadgeComponent.new(style: :important)) do %>
          <%= message_thread.status %>
        <% end %>
      </div>
    </div>
    <div class="flex-shrink-0">
      <% if message_thread.updated_at.today? %>
        Today <%= message_thread.updated_at.strftime("%l:%M%P") %>
      <% else %>
        <%= message_thread.updated_at.strftime("%b %e %l:%M%P") %>
      <% end %>
    </div>
  <% end %>
<% end %>

<%= tag.h2 t(".old_heading"), class: "uppercase tracking-wider font-semibold text-gray-500 mt-16 mb-8" %>
