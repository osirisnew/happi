<%= link_to message_thread_path(message_thread), class: "mb-4 flex items-center", id: dom_id(message_thread) do %>
  <%= avatar_tag message_thread.customer, size: 50, extra_class: "mr-4 flex-shrink-0" %>
  <div class=" flex-grow">
    <h3 class="text-gray-800 text-xl font-semibold">
      <%= message_thread.customer.name.full %>
      <small class="ml-2 text-lg text-gray-600 font-normal">
        <%= message_thread.customer.email %>
      </small>
    </h3>
    <div class="flex items-center">
      <span class="mr-3"><%= message_thread.subject %></span>
      <%= render(BadgeComponent.new(style: message_thread.open? ? :important : :normal)) do %>
        <%= message_thread.status %>
      <% end %>
    </div>
  </div>
  <div class="flex-shrink-0 flex items-center justify-end">
    <% if message_thread.user_id.present? %>
      <%= avatar_tag message_thread.user, size: 26, extra_class: "mr-3" %>
    <% end %>
    <%= datetime message_thread.updated_at %>
  </div>
<% end %>
