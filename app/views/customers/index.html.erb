<div class="flex items-center mb-8">
  <%= tag.h1 t("customers.heading"), class: "uppercase tracking-wider font-semibold text-gray-500 flex-auto" %>

  <%= link_to t("customers.add_new"), new_customer_path, class: "mr-3 flex-shrink-0 button -rounded" %>

  <%= form_with(url: "/", class: "styled-form") do |f| %>
    <%= f.search_field :query, placeholder: "Search customers", class: "rounded" %>
  <% end %>
</div>

<%= render partial: "customers/link", collection: @customers, as: :customer, locals: { class: "mb-4" } %>
