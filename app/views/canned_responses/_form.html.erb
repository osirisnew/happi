<%= form_with(model: @canned_response, class: "styled-form") do |f| %>
  <%= render "shared/form_errors", object: f.object %>

  <div class="mb-5">
    <%= f.label :label %>
    <%= f.text_field :label %>
  </div>

  <div class="mb-6">
    <%= f.label :content %>
    <%= f.rich_text_area :content %>
  </div>

  <%= f.submit t(".button"), class: "button -primary" %>
<% end %>
