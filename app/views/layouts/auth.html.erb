<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/partials/head" %>
  </head>

  <body>
    <%= render "shared/flash_alerts" %>

    <%= render "layouts/partials/masquerade" %>

    <div class="max-w-7xl px-4 sm:px-6 lg:px-8 mx-auto">
      <div class="py-4 flex justify-center items-center">
        <%= link_to image_tag("logo.svg", alt: "Happi", class: "w-auto h-10 mt-8"), dashboard_path, class: "flex-shrink-0" %>
      </div>

      <div class="mt-6 shadow-max rounded-3xl max-w-md mx-auto p-5 sm:p-8">
        <%= yield %>
      </div>

      <div class="my-6 text-center text-base text-gray-300">
        &copy; Happi <%= Time.current.year %>
      </div>
    </div>
  </body>
</html>
